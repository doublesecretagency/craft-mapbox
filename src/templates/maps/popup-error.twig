{% css %}
.mb-popup-error {
    font-size: 1.1em;
    max-width: 560px;
}
.mb-popup-error div:first-of-type {
    font-weight: bold;
    padding: 0.2em 0.2em;
}
.mb-popup-error pre {
    color: #4a5568;
    background-color: #edf2f7;
    padding: 0.8em 1em;
    margin-top: 0.4em;
}
.mb-popup-error div:last-of-type {
    font-size: 1.2em;
    margin-top: 0.1em;
    padding: 1em 1em;
    border: 1px solid #a0aec0;
    background-color: #fefcbf;
}
{% endcss %}

<div class="mb-popup-error">
    <div><strong>Twig template error:</strong></div>
    {% if filename %}
        <pre>{{ filename }}</pre>
    {% endif %}
    <div>{{ message }}</div>
</div>
